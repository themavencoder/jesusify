<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"

        android:background="@color/colorbackground"
        android:orientation="vertical"
      >

        <ImageView
            android:id="@+id/mainscreen_sermon_picture"
            android:layout_width="132dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thinkbig" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainscreen_sermon_name"
            android:layout_marginLeft="8dp"
            android:text="Think Big"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 11-02-2018"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/mainscreen_sermon_date"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/ash"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloads: 234"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/mainscreen_sermon_downloads"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/ash"
            android:layout_marginBottom="8dp"
            />


    </LinearLayout>


</LinearLayout>